    <title>Edit Dogs</title>
</head>
<body>
    <h1>Edit Dogs</h1>
    <form action="/dogs/<%=dog._id%>?_method=PUT" method="POST">
        <!--input for fullName-->
        <p>found Dog Id<%=id%></p>
        <input type="text" name="name" value="<%=dog.name%>"
        placeholder="add full name here">
        <!--input for our submit-->
        <input type="submit" value="Edit Dog">
    </form> 
    <form action="/dogs/<%=dog._id%>?_method=DELETE" method="POST">
        <button type="submit">Delete this dog</button>
    </form>
    
</body>
</html>